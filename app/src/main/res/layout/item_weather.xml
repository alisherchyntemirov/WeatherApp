<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.WeatherFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="414dp"
        android:layout_height="250dp"
        >

        <ImageView
            android:id="@+id/sun"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="311dp"
            android:background="@drawable/sun" />

        <ImageView
            android:id="@+id/sky_im"
            android:layout_width="414dp"
            android:layout_height="250dp"
            android:background="@drawable/city"
            />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/fond_cv"
        android:layout_width="414dp"
        android:layout_height="520dp"
        app:cardCornerRadius="50dp">

        <TextView
            android:id="@+id/day_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20sp"
            android:textColor="@color/gray"
            android:textSize="15sp"
            tools:text="Friday, 17 december 2021 | 14:00" />

        <Button
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="260dp"
            android:background="@drawable/blue_city"
            android:textColor="@color/blue"
            tools:text="Kyrgyzstan, Bishkek" />

        <ImageView
            android:id="@+id/weather_define_im"
            android:layout_width="40dp"
            android:background="@drawable/sunny"
            android:layout_height="40dp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="60dp"/>

        <TextView
            android:id="@+id/weather_define_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="100dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="Sunny" />

        <TextView
            android:id="@+id/degrees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="175dp"
            android:layout_marginTop="55dp"
            android:textColor="@color/black"
            android:textSize="60sp"
            tools:text="33" />

        <ImageView
            android:id="@+id/tempe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="245dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/c" />

        <TextView
            android:id="@+id/maxTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="330dp"
            android:layout_marginTop="70dp"
            tools:text="33"
            app:drawableEndCompat="@drawable/c" />

        <TextView
            android:id="@+id/min_Temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="330dp"
            android:layout_marginTop="95dp"
            tools:text="27"
            app:drawableEndCompat="@drawable/c" />

        <ImageView
            android:id="@+id/humidity_im"
            android:layout_width="40dp"
            android:background="@drawable/hunidity"
            android:layout_height="40dp"
            android:layout_marginTop="160dp"
            android:layout_marginStart="60dp"/>

        <TextView
            android:id="@+id/humidity_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="200dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="Humidity" />

        <ImageView
            android:id="@+id/pressure_im"
            android:layout_width="40dp"
            android:background="@drawable/pressure"
            android:layout_height="40dp"
            android:layout_marginTop="160dp"
            android:layout_marginStart="195dp"/>

        <TextView
            android:id="@+id/pressure_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="200dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="Pressure" />

        <ImageView
            android:id="@+id/wind_im"
            android:layout_width="40dp"
            android:background="@drawable/wind"
            android:layout_height="40dp"
            android:layout_marginTop="160dp"
            android:layout_marginStart="330dp"/>

        <TextView
            android:id="@+id/wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="325dp"
            android:layout_marginTop="200dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="Wind" />

        <ImageView
            android:id="@+id/sunrise_im"
            android:layout_width="40dp"
            android:background="@drawable/sunrise"
            android:layout_height="40dp"
            android:layout_marginTop="270dp"
            android:layout_marginStart="60dp"/>

        <TextView
            android:id="@+id/sunrise_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="310dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="Sunrise" />

        <ImageView
            android:id="@+id/sunset_im"
            android:layout_width="40dp"
            android:background="@drawable/sunset"
            android:layout_height="40dp"
            android:layout_marginTop="270dp"
            android:layout_marginStart="195dp"/>

        <TextView
            android:id="@+id/sunset_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="310dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="Sunset" />

        <ImageView
            android:id="@+id/day_time_im"
            android:layout_width="40dp"
            android:background="@drawable/daytime"
            android:layout_height="40dp"
            android:layout_marginTop="270dp"
            android:layout_marginStart="330dp"/>

        <TextView
            android:id="@+id/day_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="315dp"
            android:layout_marginTop="310dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="Daytime" />
    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</LinearLayout>